- if post.message.length < 80
  %span.bigger
    = markdownify(post.message, :youtube_maps => post[:youtube_titles])
-else
  = markdownify(post.message, :youtube_maps => post[:youtube_titles])

- if photos.count > 0
  .photo_attachments
    = link_to (image_tag photos[0].url(:thumb_large), :height => 200, :width => 200), photo_path(photos[0])

    - for photo in photos[1..5]
      = link_to (image_tag photo.url(:thumb_small), :height => 50, :width => 50), photo_path(photo)

