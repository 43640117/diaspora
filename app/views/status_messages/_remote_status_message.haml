  if (request#{post.id}){
    request#{post.id}.onload = function(){
          //do something with request.responseText
          //alert( request.responseText  );
          
          alert(JSON.parse(request#{post.id}.responseText).message);
          $('.remote_status_message_#{post.id}').append(request#{post.id}.responseText)
      }
      request#{post.id}.send();
  }


